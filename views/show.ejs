<%- include("partials/header") %>

<div class = "text-center">
	<h1 class = "display-3">
	<%= foundPrefecture.name %> Gyms
	</h1>
	<a class = "text-center" href = "/prefectures">
		<button class = "btn btn-lg my-5">
			<i class="fas fa-chevron-circle-right"></i> Return to Prefectures
		</button>
	</a>
</div>

<div class = "container">
	<div class = "grid">
		<div class = "row">
			<div class = "col-sm-12">
				<% for(i = 0; i < foundPrefecture.gyms.length; i++) { %>
				<div class = "card my-5 text-center">
					<div class = "card-body">
						<h5 class = "card-title">
							<%= foundPrefecture.gyms[i].gym_name %>
						</h5>
						<p class = "card-text">
							<%= foundPrefecture.gyms[i].location %>
						</p>
					</div>
				</div>
				<% } %>
			</div>
		</div>
	</div>
</div>







<%- include("partials/footer") %>